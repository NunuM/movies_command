#!/bin/sh -e

omdbapi="$(snapctl get omdbapi)"

if [ -z "$omdbapi" ]; then
    echo "omdbapi api key is required!"
    exit 1
fi

paths=$(find / -type f -name pirate.py 2> /dev/null)
file=$(echo $paths | head -n 1)
filename=$(readlink -f $file)
directory=$(dirname $filename)

sed -i "s/api_key=.*/api_key=${omdbapi}/g" "${directory}/config.cfg"
