#!/bin/sh -e

omdbapi="$(snapctl get omdbapi)"

if [ -z "$omdbapi" ]; then
    echo "If you want full movie metada, provide you api omdbapi key by tiping: snap set blockbuster omdbapi=\"my-key\" !"
    exit 0
fi

paths=$(find $SNAP/lib -type f -name pirate.py 2> /dev/null)
file=$(echo $paths | head -n 1)
filename=$(readlink -f $file)
directory=$(dirname $filename)

sed -i "s/api_key=.*/api_key=${omdbapi}/g" "${directory}/config.cfg"
